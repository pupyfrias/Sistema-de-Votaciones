<main class="m-5">
    {{#if isAuthenticated}}
    {{#if hasCiudadanos}}
    <div class="row row-cols-md-4">
        {{#each ciudadanos}}
        <div class="col pt-3">
            <div class="card">
                
                <div class="card-body">
                    <p class="card-text">
                        <span id="nombre"><strong>Cédula: </strong>{{this.cedula}}</span><br>
                        <span id="nombre"><strong>Nombre: </strong>{{this.nombre}}</span><br>
                        <span id="nombre"><strong>Apellido: </strong>{{this.apellido}}</span><br>
                        <span id="nombre"><strong>Correo: </strong>{{this.email}}</span><br>
                        <span id="estado"><strong>Estado: </strong>{{#if this.estado}}Disponible <span class="green-circle"></span>{{else}}No está Disponible <span class="red-circle"></span>{{/if}}</span>
                    </p>
                    <a href="/admin/editar-ciudadanos/{{this.id}}?edit=true" class="btn btn-primary fl editar" data-eleccion={{#if ../eleccion}} "true"{{else}}"false" {{/if}}>Editar</a>
                    
                </div>
            </div>
        </div>
        {{/each}}
    </div>
    {{else}}
    <h1>No Hay Ciudadanos Disponibles</h1>
    {{/if}}






    <a href="/admin/agregar-ciudadanos"><img src="../../assets/images/add.png" alt="" width="100px"
            class="add editar" data-eleccion={{#if eleccion}} "true"{{else}}"false" {{/if}}></a>
    {{else}}
    <h2>No está Autorizado para visualizar esta Página</h2>
    {{/if}}
</main>