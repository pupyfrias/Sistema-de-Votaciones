<main class="m-5">
     {{#if error}}
    <div class="alert alert-danger alert-dismissible fade show d-flex" role="alert">
        <ul>
            {{#if errorEmail}}<li>Este correo ya está registrado </li>{{/if}}
            {{#if errorCedula}}<li>Esta cédula ya está registrado</li>{{/if}}
        </ul>  
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>  
    {{/if}}
    {{#if isAuthenticated}}
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-primary text-white">Ciudadanos</div>
                <form class="m-4" action={{#if editMode}} "/admin/actualizar-ciudadanos"
                    {{else}}"/admin/guardar-ciudadanos"{{/if}} method="POST">
                    <div class="mb-3">
                        <label for="ceduala" class="form-label">Cédula</label>
                        <input type="text" class="form-control {{#if errorCedula}} border-danger{{/if}}" name="cedula" id="cedula" {{#if editMode}}disabled value="{{ciudadanos.cedula}}"
                            {{/if}} {{#if error}} value="{{cedula}}"{{/if}}>
                    </div>
                    <div class="mb-3">
                        <label for="nombre" class="form-label">Nombre</label>
                        <input type="text" class="form-control" name="nombre" id="nombre" {{#if editMode}}value="{{ciudadanos.nombre}}"
                            {{/if}}{{#if error}} value="{{nombre}}"{{/if}}>
                    </div>
                    <div class="mb-3">
                        <label for="apellido" class="form-label">Apellido</label>
                        <input type="text" class="form-control" name="apellido" id="apellido" {{#if editMode}}value="{{ciudadanos.apellido}}"
                            {{/if}} {{#if error}} value="{{apellido}}"{{/if}}>
                    </div>
                    <div class="mb-3">
                        <label for="correo" class="form-label">Correo</label>
                        <input type="email" class="form-control  {{#if errorEmail}} border-danger{{/if}}" name="correo" id="correo" {{#if editMode}}value="{{ciudadanos.email}}"
                            {{/if}} {{#if error}} value="{{correo}}"{{/if}}>
                    </div>

                   
                    {{#if editMode}}
                    <div class="mb-3">
                        <label for="estado" class="form-label">Estado</label>
                        <select class="form-select" aria-label="Default select example" name="estado" id="estado">
                            <option value="false">No Disponible</option> 
                            <option value="true" {{#if ciudadanos.estado}} selected{{/if}}>Disponible</option>
                                                    
                        </select>
                    </div>
                    <input type="hidden" name="id" value="{{ciudadanos.id}}">
                    {{/if}}

                    <button type="submit" class="btn btn-primary" id="ciudadanos"> {{#if
                        editMode}}Actualizar{{else}}Guardar{{/if}}</button>
                        <a href="/admin/ciudadanos/" class="btn btn-danger">Cancelar</a>
                <input type="hidden" name="_csrf" value="{{csrfToken}}"></form>
            </div>
        </div>
        <div class="col-md-4"></div>
    </div>
    {{else}}
    <div class="alert alert-danger alert-dismissible fade show d-flex" role="alert">
        <ul>
            <li>No está Autorizado para visualizar esta Página</li>
        </ul>  
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>  
    {{/if}}
</main>