<main class="m-5">
    {{#if isAuthenticated}}
    {{#if on}}
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-primary text-white">Elecciones</div>
                <form class="m-4" action={{#if editMode}} "/admin/actualizar-elecciones"
                    {{else}}"/admin/guardar-elecciones"{{/if}} method="POST">
                    
                    <div class="mb-3">
                        <label for="nombre" class="form-label">Nombre</label>
                        <input type="text" class="form-control" name="nombre" id="nombre" {{#if editMode}}value="{{elecciones.nombre}}"
                            {{/if}}>
                    </div>
                    <div class="mb-3">
                        <label for="fecha" class="form-label">Fecha</label>
                        <input type="text" class="form-control" name="fecha" id="fecha" {{#if editMode}}value="{{elecciones.fecha}}"
                            {{/if}}>
                    </div>
                    
                   
                    {{#if editMode}}
                    <div class="mb-3">
                        <label for="estado" class="form-label">Estado</label>
                        <select class="form-select" aria-label="Default select example" name="estado" id="estado">
                            <option value="false">No est치 Disponible</option> 
                            <option value="true" {{#if elecciones.estado}} selected{{/if}}>Disponible</option>
                                                    
                        </select>
                    </div>
                    <input type="hidden" name="id" value="{{elecciones.id}}">
                    {{/if}}

                    <button type="submit" class="btn btn-primary"> {{#if
                        editMode}}Actualizar{{else}}Guardar{{/if}}</button>
                </form>
            </div>
        </div>
        <div class="col-md-4"></div>
    </div>
    {{else}}
        <h3>Para iniciar una Elecci칩n deben de haber al menos 2 Candidatos activos</h3>
    {{/if}}
    {{else}}
    <h2>No est치 Autorizado para visualizar esta P치gina</h2>
    {{/if}}
</main>