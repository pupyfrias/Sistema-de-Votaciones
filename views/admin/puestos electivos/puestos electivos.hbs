<main class="m-5">
    {{#if isAuthenticated}}
    {{#if hasPuesto}}
    <div class="row row-cols-md-5">
        {{#each puestos}}
        <div class="col pt-3">
            <div class="card">
                <div class="card-body">
                    <p class="card-text">
                        <span id="nombre"><strong>Nombre: </strong>{{this.nombre}}</span><br>
                        <span id="Descripcion"><strong>Descripcion: </strong>{{this.descripcion}}</span><br>
                        <span id="estado"><strong>Estado: </strong>{{#if this.estado}}Disponible <span class="green-circle"></span>{{else}}No está Disponible <span class="red-circle"></span>{{/if}}</span>
                    </p>
                    <a href="/admin/editar-puestos-electivos/{{this.id}}?edit=true" class="btn btn-primary fl editar" data-eleccion={{#if ../eleccion}} "true"{{else}}"false" {{/if}}>Editar</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
    {{else}}
    <h1>No Hay Puestos Disponibles</h1>
    {{/if}}






    <a href="/admin/agrgar-puestos-electivos"><img src="../../assets/images/add.png" alt="" width="100px"
            class="add editar" data-eleccion={{#if eleccion}} "true"{{else}}"false" {{/if}}></a>
{{else}}
    <h2>No está Autorizado para visualizar esta Página</h2>
{{/if}}
</main>